{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "globals": {
    "React": true
  },
  "parser": "babel-eslint",
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0,
    "no-console": 0,
    // "max-len": ["error", { "code": 80 }],
    "react/display-name": 0,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}